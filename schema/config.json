{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "source": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "url",
          "sha256sum"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "sha256sum": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "matrix": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "distro",
          "branch"
        ],
        "properties": {
          "distro": {
            "type": "string"
          },
          "branch": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "universal": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          }
        },
        "specific": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "distro",
              "branch"
            ],
            "properties": {
              "distro": {
                "type": "string"
              },
              "branch": {
                "type": "string"
              }
            },
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}